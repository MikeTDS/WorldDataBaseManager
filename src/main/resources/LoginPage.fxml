<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginPanel.LoginController">

    <Label alignment="CENTER" contentDisplay="CENTER" opacity="0.38" prefHeight="35.0" prefWidth="600.0" text="DataBase Manager 1.0" />
    <BorderPane prefHeight="200.0" prefWidth="200.0">
      <center>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Login:" />
               <TextField fx:id="loginTextField" onAction="#onLogin" onDragEntered="#onLogin" />
               <Label text="Password:" />
               <PasswordField fx:id="loginPasswordField" onAction="#onLogin" />
               <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="324.0">
                  <children>
                     <Button fx:id="signInButton" defaultButton="true" mnemonicParsing="false" onAction="#onLogin" text="Sign in">
                        <HBox.margin>
                           <Insets right="10.0" />
                        </HBox.margin>
                     </Button>
                   <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#onSignUp" text="Sign up">
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
            </children>
            <padding>
               <Insets left="20.0" right="20.0" />
            </padding>
         </VBox>
      </center>
    </BorderPane>

</VBox>
